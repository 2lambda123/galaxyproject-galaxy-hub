extends layout.pug

block content
    section.section-content
        if toc
            div.col-md-9
                if !skip_title_render
                    h1.pageTitle #{ title }
                div !{ contents }
            div.col-md-3
                div.affix#sidebar
                    +renderToc(toc)
        else
            div.col-md-12
                section.section-content
                    if !skip_title_render
                        h1.pageTitle !{ title }
                    div !{ contents }
