extends layout.pug

block content
    section.section-content
        if toc
            div.col-md-9
                    h1(style="margin-top: 0px") !{ title }
                    div !{ contents }
            div.col-md-3
                div.affix#sidebar
                    +renderToc(toc)
        else
            div.col-md-12
                section.section-content
                    h1(style="margin-top: 0px") !{ title }
                    div !{ contents }
