extends layout.pug


mixin renderSplash(item)
   h1.display-3 !{item.title}
   p.lead !{item.contents}

block content
    section.section-content
        div.row#splash-row
            div.col-sm-12
                div.carousel.slide(data-ride="carousel" id="splash-box")
                    div.carousel-inner(role="listbox")
                        div.item.carousel-item.active.jumbotron
                            +renderSplash(splash[0])
                        each item in splash.slice(1,5)
                            div.item.carousel-item.jumbotron
                                +renderSplash(item)
                    a.carousel-control-prev(href="#carouselExampleControls" role="button" data-slide="prev")
                        span.carousel-control-prev-icon( aria-hidden="true")
                        span.sr-only: Previous
                    a.carousel-control-next(href="#carouselExampleControls" role="button" data-slide="next")
                        span.carousel-control-prev-icon( aria-hidden="true")
                        span.sr-only: Next
        div.row
            div.col-sm-4
                h2: a( href="/news/" ) News
                each item in news.slice(0,5)
                    p
                        a( href=item.link ) #{item.title}
                        if item.tease
                            |  – !{helpers.marked(item.tease).replace("<p>","").replace("</p>","")}

            div.col-sm-4
                h2: a( href="/events/" ) Events
                - var events_counter = 0
                each item in events.slice().reverse()
                    if events_counter < 5 && item.date != undefined && helpers.moment(item.date) >= helpers.moment(new Date()).subtract((item.days || 1), 'days')
                        - events_counter += 1
                        p
                            a( href=item.link ) #{item.title}
                            if item.tease
                                |  – !{helpers.marked(item.tease).replace("<p>","").replace("</p>","")}

            div.col-sm-4
                div#twitter_timeline( style="height:400px" )
                    h2
                        a(href="http://twitter.com/galaxyproject") @galaxyproject
                        a.twitter-timeline(data-dnt="true" height="400" data-chrome="noheader nofooter noscrollbar noborders transparent" href="https://twitter.com/galaxyproject" data-widget-id="384667676347363329")
                    script(type='text/javascript').
                        !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");
