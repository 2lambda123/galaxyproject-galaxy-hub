extends layout.pug

mixin renderNews()
    +renderPageTitle
    p.small #{helpers.moment(date).format("MMMM Do YYYY")}
    div !{ contents }

block content
    section.section-content
        if toc
            div.col-md-9
                +renderNews
            div.col-md-3
                div#sidebar
                    +renderToc(toc)
        else
            div.col-md-12
                +renderNews
