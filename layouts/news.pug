extends layout.pug

block content
    section.section-content
        if toc
            div.col-md-9
                h1 #{ title }
                if tease
                    p: em #{tease}
                p.small #{helpers.moment(date).format("MMMM Do YYYY")}
                div !{ contents }
            div.col-md-3
                div.affix#sidebar
                    +renderToc(toc)
        else
            div.col-md-12
                section.section-content
                    h1 #{ title }
                    if tease
                        p: em #{tease}
                    p.small #{helpers.moment(date).format("MMMM Do YYYY")}
                    div !{ contents }
